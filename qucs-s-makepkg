#!/bin/sh

TMP=/tmp
BUILDDIR=/qucsbld

mkdir $TMP$BUILDDIR
cd $TMP$BUILDDIR

git clone https://github.com/ra3xdh/qucs_s


cd qucs_s
rm -rf .git
#rm -rf qucs-core

VERSION=`cat VERSION`
#VERSION=0.0.19
EXTRAVERSION=S
TARBALL=qucs-${VERSION}${EXTRAVERSION}.tar.gz

cd ..
mv qucs_s qucs-${VERSION}${EXTRAVERSION}

tar cvfz $TARBALL qucs-${VERSION}${EXTRAVERSION}

rm $TMP/$TARBALL
mv $TARBALL $TMP
echo "Qucs tarball is: $TMP/$TARBALL"

rm -rf $TMP$BUILDDIR

